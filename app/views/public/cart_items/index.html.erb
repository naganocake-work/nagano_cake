<%= render 'public/customers/list', customers: @customers %>
<h3>ショッピングカート</h3>

<%= link_to "カートを空にする", cart_items_path, method: :delete, "data-confirm" => "本当に消しますか？"%>
<table>
  
  <thead>
  
    <tr>  
    
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    
    </tr>
  
  </thead>
  <% total = 0 %>
  <% @cart_items.each do |cart_item| %>
  
  <tbody>
    
    <tr>
      
      <td><%= cart_item.item.name %></td>
      <td>￥<%= cart_item.item.with_tax_price.floor %></td>
      <%= form_with model: @cart_item,url: cart_item_path(cart_item.id), method: :patch do |f| %>
      
      <td>
        
        <%= f.select :amount, *[1..10],selected: cart_item.amount %>
      
        <%= f.submit "変更" %>
      </td>
      <% end %>
      
      <td>￥<%= cart_item.subtotal %></td> 
      <td><%= link_to "削除", cart_item_path(cart_item), method: :delete, "data-confirm" => "本当に消しますか？"  %></td>
       <% total += cart_item.subtotal %>
    </tr>
    
  </tbody>
  
  <% end %>
  

</table>

<table>
 <tr>
  
 
  <th>合計金額</th>
  <td>￥<%= total %></td>
</tr>
</table>

<%= link_to "情報入力に進む", new_order_path(@cart_item.id) %>