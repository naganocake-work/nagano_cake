<%= render 'public/customers/list', customers: @customers %>

<div class="container -a">


  <div class="row">

    <div class="col-md-3" >

      <%= render 'public/items/genre', items: @items %>

    </div>

  <div class="col-md-9">

    <div class="row">

        <div class="col-md-12">

          <h3>商品一覧<label>(全<%= @items.count %>件)</label></h3>

        </div>

   <div class="row row-cols-4 mt-4 col-md-12">

      <% @items.each do |item| %>
      
        <div class="col-md-3 ">
      
           <div class="card shadow-sm my-3">
             
          <%= link_to item_path(item.id) do %>
          
          <%= image_tag item.get_image(100,100), size: '205x120', class: "rounded-top" %>
          
          <% end %>
          
              <div class="card-body">
          
                  <p class="card-text"><%= item.name %></p>
                  
                  <p class="card-text">￥<%= item.price %></p>
                  
                  <div class="d-flex justify-content-between align-items-center">
    
               </div>
               
              </div>
              
            </div>
               
          </div>
              
      <% end %>

      
      

          
        </div>

      </div>
<%= paginate @items %>
    </div>

  </div>

</div>
