<%= render 'admin/customers/list', admins: @admins %>
<h3>会員一覧</h3>

<% @customers.each%>

<table>

  <thead>

    <tr>

      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>

    </tr>

  </thead>

  <% @customers.each do |customer| %>

  <tbody>

    <tr>

      <td><%= customer.id %></td>
      <td>
       <%= link_to admin_customer_path(customer) do %>

        <%= customer.last_name %><%= customer.first_name %>

        <% end %>
      </td>
      <td><%= customer.email %></td>
      <td><%= customer.is_active ? "有効" : "退会" %></td>

    </tr>

  </tbody>

  <% end %>

</table>




<%= paginate @customers %>