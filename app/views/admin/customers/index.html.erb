<%= render 'admin/customers/list', admins: @admins %>

<div class="container">
  
  <h3 class="col-3 my-3">会員一覧</h3>
  
  <div class="row">
     
    <table class="table table-hover table-bordered col-md-12 mt-3">
    
      <thead>
    
        <tr class="table-active">
    
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
    
        </tr>
    
      </thead>
    
      <% @customers.each do |customer| %>
    
      <tbody>
    
        <tr>
    
          <td><%= customer.id %></td>
          <td>
           <%= link_to admin_customer_path(customer) do %>
    
            <%= customer.last_name %><%= customer.first_name %>
    
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <td><%= customer.is_active ? "有効" : "退会" %></td>
    
        </tr>
    
      </tbody>
    
      <% end %>
    
    </table>

    <div class="col-md-7 offset-5"><%= paginate @customers %></div>

  </div>
  
</div>
