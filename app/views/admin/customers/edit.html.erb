<%= render 'admin/customers/list', admins: @admins %>
<h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>

<%= form_with model: @customer, url: admin_customer_path do |f| %>

<div>
<label>会員ID<label>
<%= @customer.id %>
</div>

<div>
<%= f.label :last_name_kana, "氏名"%>
<%= f.text_field :last_name %>
<%= f.text_field :first_name %>
</div>

<div>
<%= f.label :last_name_kana, "フリガナ"%>
<%= f.text_field :last_name_kana %>
<%= f.text_field :first_name_kana %>
</div>

<div>
<%= f.label :postal_code, "郵便番号" %>
<%= f.text_field :postal_code, maxlength: 7, pattern: "\\d*" %>
</div>
<div>
 <%= f.label :address, "住所" %>
 <%= f.text_field :address %></div>

<div>
  <%= f.label :telephone_number, "電話番号" %>
  <%= f.text_field :telephone_number, maxlength: 11, pattern: "\\d*" %>

</div>

<div>会員ステータス

 <%= f.radio_button :is_active, true %>
 <%= f.label :is_active_true, "有効" %>
 <%= f.radio_button :is_active, false %>
 <%= f.label :is_active_false, "退会" %>

</div>

<%= f.submit "変更を保存" %>

<% end %>

