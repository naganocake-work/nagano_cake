<%= render 'admin/customers/list', admins: @admins %>
<h3>商品一覧</h3>

<table>

  <thead>

    <tr>

    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>

    </tr>

  </thead>

  <% @items.each do |item| %>

  <tbody>

    <tr>

      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item) %></td>
      <td><%= item.price %>円</td>
      <td><%= item.genre.name %></td>
      <td><%= item.is_active ? "販売中" : "販売停止中" %></td>

    </tr>

  </tbody>

  <% end %>

<%= paginate @items %>


</table>
