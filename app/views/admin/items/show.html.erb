<%= render 'admin/customers/list', admins: @admins %>

<div class="container">

  <h3 class="col-3 mb-5 mt-3">商品詳細</h3>

  <div class="row">

  <div class="col-md-4"><%= image_tag @item.get_image(100,100) , size: '350x250' %></div>


    <div class="col-md-8">

      <div class="row">

      <div class="col-md-2 my-3">

          商品名

       </div>

       <div class="col-md-10 my-3">

         <%= @item.name %>

       </div>

      <div class="col-md-2">

        商品説明

      </div>

      <div class="col-md-10">

        <%= @item.introduction %>

      </div>

      <div class="col-md-2 my-3">

        ジャンル

      </div>

      <div class="col-md-10 my-3">

        <%= @item.genre.name %>

      </div>

      <div class="col-md-2">

        税込価格

      </div>

      <div class="col-md-10">

        <%= (@item.price * 1.1).floor %>
        (<%= @item.price %>)円

      </div>

      <div class="col-md-2 my-3">

        販売ステータス

      </div>

      <div class="col-md-10 my-3">

        <%= @item.is_active ? "販売中": "販売停止中" %>

      </div>



      </div>

    </div>

   <div class="row col-md-12 my-3">

     <div class="col-md-12 text-center"><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %></div>

   </div>

  </div>

</div>