<%= render 'admin/customers/list', admins: @admins %>
<%= form_with model: @genre,url: admin_genres_path, method: :post do |f| %>

<div class="container">

  <h3 class="col-3 my-3">ジャンル名・追加</h3>

   <% if @errors %>

        <ul>

          <% @errors.each do |error| %>

            <li><%= error %></li>

          <% end %>

        </ul>
  <% end %>

   <div class="row my-5">

    <div class="col-md-2 py-1">ジャンル名</div>

    <div class="col-md-2 py-1"><%= f.text_field :name, placeholder: "ジャンル名" %></div>

    <div class="col-md-8"><%= f.submit '新規登録', class: "btn btn-success" %></div>

   </div>
    <% end %>
  <table class="table table-hover table-bordered col-md-12 mt-3">

      <thead>

        <tr class="table-active">

          <th>ジャンル</th>

        </tr>

      </thead>

      <% @genres.each do |genre| %>

      <tbody>

        <tr>

          <td><%= genre.name %></td>

          <td><%= link_to "編集する",  edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>

        </tr>

      </tbody>

      <% end %>

  </table>


  </div>

