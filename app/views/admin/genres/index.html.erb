
<div class="main">
<h3>ジャンル名・追加</h3>

<%= form_with model: @genre,url: admin_genres_path, method: :post do |f| %>

<p>ジャンル名    <%= f.text_field :name, placeholder: "ジャンル名" %></p>

<%= f.submit '新規登録' %>

<% end %>

<table>

    <thead>

      <tr>

        <th>ジャンル</th>

      </tr>

    </thead>

    <% @genres.each do |genre| %>

    <tbody>

      <tr>

        <td><%= genre.name %></td>

        <td><%= link_to "編集する",  edit_admin_genre_path(genre.id) %></td>

      </tr>

    </tbody>

    <% end %>

</table>


</div>