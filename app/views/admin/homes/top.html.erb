<%= render 'admin/customers/list', admins: @admins %>
<h3>注文履歴一覧</h3>

<table>
  
  <thead>
    
    <tr>
      
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
      
    </tr>
    
  </thead>
  
  <% @orders.each do |order| %>
  
  <tbody>
    
    <tr>
      
      <td>
        <%= link_to admin_order_path(order) do %>
        
        <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
        
        <% end %>
      </td>
      <td><%= order.addressee_name %></td>
      
      <% total_number = 0 %>
      
      <% order.order_details.each do |order_detail| %>
      
      <% total_number += order_detail.quantity %>
      
      <% end %>
      
      <td><%= total_number %></td>
      <td><%= order.order_status %></td>
      
    </tr>
    
  </tbody>
  <% end %>
</table>