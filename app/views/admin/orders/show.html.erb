<%= render 'admin/customers/list', admins: @admins %>

<h3>注文履歴詳細</h3>

<div>
<label>購入者</label>
<%= @order.customer.last_name + @order.customer.first_name %>
</div>

<div>
<label>注文日</label>
<%= @order.created_at.strftime("%y-%m-%d")%>
</div>

<div>
<label>配送先</label>
<%= @order.postal_code + @order.address_area + @order.addressee_name %>
</div>

<div>
<label>支払方法</label>
<%= @order.payment_method_i18n %>
</div>

<div>
<%= form_with model: @order, url: admin_order_path do |f| %>
注文ステータス <%= f.select :order_status, Order.order_statuses.keys %>
<%= f.submit "更新" %>
<% end %>
</div>

<table>

  <thead>

    <tr>

      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>

    </tr>

  </thead>

  <% total = 0 %>

  <% @order_details.each do |order_detail| %>

  <tbody>

    <tr>

      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.tax_included_price %></td>
      <td><%= order_detail.quantity %></td>
      <td><%= order_detail.detail_amount %></td>
      <% total += order_detail.detail_amount %>
      <td>
      <%= form_with model: order_detail, url: admin_order_detail_path(order_detail), method: :patch do |f| %>

        <%= f.select :making_status, OrderDetail.making_statuses.keys %>
        <%= f.submit "更新" %>


      <% end %>
      </td>


    </tr>

  </tbody>
    <% end %>
</table>


<label>商品合計</label>
<p><%= total %>円</p>
<label>送料</label>
<p><%= @order.shipping_cost %>円</p>
<label>請求金額合計</label>
<p><%= total + @order.shipping_cost %>円</p>
